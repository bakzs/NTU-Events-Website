
@{
    Layout = "../Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <h2>User #1 Event</h2>
    <br />
    <div id="eventTb">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Type</th>
                    <th scope="col">Venue</th>
                    <th scope="col">Description</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                    <th scope="col">Quota</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(event,index) in events">
                    <td>{{index+1}}</td>
                    <td>{{event.Title}}</td>
                    <td>{{event.Type}}</td>
                    <td>{{event.Venue}}</td>
                    <td>{{event.Description}}</td>
                    <td>{{event.StartDate}}</td>
                    <td>{{event.EndDate}}</td>
                    <td>{{event.Quota}}</td>
                    <td>
                        <button type="button" class="btn btn-outline-info btn-block">Edit</button>
                        <button type="button" class="btn btn-outline-danger btn-block">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section eventTbScript{
    <script>
        new Vue({
            el: '#eventTb',
            data: {
                events: []
            },
            mounted() {
                axios.get("https://localhost:44362/api/event/1").then(response => {
                    this.events = response.data
                })
            }
        })
    </script>
}
